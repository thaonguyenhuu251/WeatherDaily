<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgSkyWeather"
        android:src="@drawable/bg_purple_sky"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_outline_round"
        android:clipToOutline="true"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableRow
        android:id="@+id/tbrTemperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/imgSkyWeather"
        tools:layout_editor_absoluteX="10sdp">

        <TextView
            android:id="@+id/txtTemperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="29°C"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/_50ssp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMaxTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="31°C"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_20ssp" />

            <View
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_2sdp"
                android:background="@color/cardview_shadow_start_color" />

            <TextView
                android:id="@+id/txtMinTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="26°C"
                android:textColor="@color/light_gray"
                android:textSize="@dimen/_20ssp" />

        </LinearLayout>
    </TableRow>

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sat, October 8th"
        android:textSize="@dimen/_14ssp"
        android:textColor="@color/button_transfer_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbrTemperature" />
    <TextView
        android:id="@+id/txtPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Hanoi"
        android:textSize="@dimen/_22ssp"
        android:textStyle="bold"
        android:textColor="@color/cardview_dark_background"
        android:fontFamily="sans-serif-condensed-light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDate" />
    <TextView
        android:id="@+id/txtWeatherTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/clear_sky"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/cardview_dark_background"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPlace" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@+id/txtWeatherTitle">

        <TextView
            android:id="@+id/txtWeatherDetail"
            android:layout_weight="9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/today_weather"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/button_transfer_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtWeatherTitle" />

        <ImageView
            android:id="@+id/imgRightArrow"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_right"
            android:textColor="@color/button_transfer_black" />

    </TableRow>


</androidx.constraintlayout.widget.ConstraintLayout>